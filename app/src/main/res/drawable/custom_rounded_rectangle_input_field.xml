<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 填充颜色 -->
    <solid android:color="#ffffff" />

    <!-- 线的宽度，颜色 -->
    <stroke
        android:width="1dip"
        android:color="#A0A0A0" />


    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

    <!-- 矩形的圆角半径 -->
    <corners android:radius="10dp" />

</shape>