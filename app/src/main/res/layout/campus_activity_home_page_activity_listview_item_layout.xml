<?xml version="1.0" encoding="utf-8"?>
<!--校园活动首页列表的总布局-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="团团一家2015招新报名"
        android:textColor="@color/black"
        android:id="@+id/activity_title"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进行中"
        android:textColor="@color/green"
        android:id="@+id/activity_state"
        android:padding="5dp"
        android:layout_alignBottom="@+id/activity_title"
        android:layout_toRightOf="@+id/activity_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="团团一家"
        android:textColor="@color/gray_word"
        android:id="@+id/activity_sponsor"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_below="@+id/activity_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-12-11"
        android:textColor="@color/gray_word"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:id="@+id/activity_create_time"
        android:layout_below="@+id/activity_title"
        android:layout_toRightOf="@+id/activity_sponsor" />

    <!--android:adjustViewBounds="true"去掉imageview中上下的空白-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_poster"
        android:adjustViewBounds="true"
        android:src="@drawable/sea"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_below="@+id/activity_sponsor" />

    <TextView
        android:id="@+id/activity_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动关键字"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/activity_poster" />

</RelativeLayout>