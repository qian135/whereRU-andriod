<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/bottom_bar">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_page_up_navigation_icon_image_view"
        android:src="@drawable/up_navigation_icon"
        android:paddingLeft="10dp"
        android:layout_alignBottom="@+id/search_box_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--android:imeOptions="actionSearch" 将该EditText变为搜索框
    但是要使其生效，还需设置android:singleLine="true"或则android:inputType="text"-->
    <EditText
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="请输入关键字"
        android:id="@+id/search_box_edit_text"
        android:background="@drawable/custom_rounded_rectangle_input_field"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>